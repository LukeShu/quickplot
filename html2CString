#! /bin/sh

if [ "$1" = "" ]
then
  echo "Usage: cat FILE.html | $0 FILE_html.cpp"
  exit 1
fi


echo "// $1  Generated by running: cat ${1%_html.cpp}.html | $0 $*" > $1

echo >> $1

echo "const char *${1%.cpp} = " >> $1

while read a
do
  echo -n "\"" >> $1
  echo -n $a | sed -e 's/"/\\\"/g' >> $1
  echo -n "\012" >> $1
  echo "\"" >> $1
done

echo ";" >> $1
